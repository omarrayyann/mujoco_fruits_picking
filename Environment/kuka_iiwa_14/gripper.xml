<asset>
    <!-- Existing assets -->
    <mesh file="gripper_base.obj"/>
    <mesh file="gripper_finger.obj"/>
</asset>

<!-- Add gripper definition -->
<body name="gripper" pos="0 0 0.045" quat="0 0 0 1">
    <inertial mass="0.5" pos="0 0 0" diaginertia="0.001 0.001 0.001"/>
    <joint name="gripper_joint" type="slide" axis="0 0 1" range="0 0.02" damping="0.1"/>
    <geom type="mesh" mesh="gripper_base" material="gray"/>
    
    <body name="left_finger" pos="0.01 0 0">
        <joint name="left_finger_joint" type="slide" axis="0 1 0" range="0 0.02" damping="0.1"/>
        <geom type="mesh" mesh="gripper_finger" material="gray"/>
    </body>
    <body name="right_finger" pos="-0.01 0 0">
        <joint name="right_finger_joint" type="slide" axis="0 -1 0" range="0 0.02" damping="0.1"/>
        <geom type="mesh" mesh="gripper_finger" material="gray"/>
    </body>
</body>
